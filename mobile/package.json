{
  "name": "quadrant-todo-mobile",
  "version": "1.0.0",
  "main": "expo-router",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "cd scripts && ./deploy-android.sh",
    "build:ios": "cd scripts && ./deploy-ios.sh",
    "build:all": "cd scripts && ./deploy-all.sh",
    "submit:android": "eas submit --platform android --latest",
    "submit:ios": "eas submit --platform ios --latest",
    "submit:all": "eas submit --platform all --latest"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@supabase/supabase-js": "^2.39.7",
    "expo": "~51.0.0",
    "expo-linking": "~6.3.0",
    "expo-router": "~3.5.0",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.1",
    "react-native-markdown-display": "^7.0.2",
    "react-native-safe-area-context": "^4.10.1",
    "react-native-screens": "^3.31.1",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "~0.19.10",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@types/react": "~18.2.79",
    "typescript": "~5.3.3"
  },
  "private": true
}
