{
  "cli": {
    "version": ">= 5.9.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "APP_ENV": "production"
      },
      "ios": {
        "buildConfiguration": "Release",
        "image": "macos-sequoia-15.4-xcode-16.3"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production-aab": {
      "extends": "production",
      "android": {
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "kumarsparkz@gmail.com",
        "ascAppId": "6757134919",
        "appleTeamId": "792UTRPHC3"
      },
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "production"
      }
    },
    "beta": {
      "ios": {
        "appleId": "kumarsparkz@gmail.com",
        "ascAppId": "6757134919",
        "appleTeamId": "792UTRPHC3"
      },
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "beta"
      }
    }
  }
}
